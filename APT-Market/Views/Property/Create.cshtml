@model APT_Market.Models.Property

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Dodaj nowe ogłoszenie</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Address">Adres</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RentPrice">Cena najmu (zł)</label>
        <input asp-for="RentPrice" class="form-control" />
        <span asp-validation-for="RentPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Size">Metraż (m²)</label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="Description">Opis</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
