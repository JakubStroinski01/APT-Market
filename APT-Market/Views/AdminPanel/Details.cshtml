@model APT_Market.Models.UsersViewModel


@{
    ViewBag.Title = "Szczegóły i edycja";
    Layout = "_Layout";
}

<div>
    <h1>Szczegóły użytkownika</h1>
    <p><strong>ID:</strong> @Model.UserId</p>
    <p><strong>Nazwa użytkownika:</strong> @Model.UserName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Numer telefonu:</strong> @Model.PhoneNumber</p>
    <p><strong>Role:</strong> @Model.SelectedRole</p>
</div>

<a asp-action="Index" class="btn btn-outline-primary">Powrót</a>