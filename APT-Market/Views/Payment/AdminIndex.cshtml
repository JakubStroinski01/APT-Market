@model dynamic

<h2>Aktywne wynajmy</h2>
<table class="table">
    <thead>
    <tr>
        <th>Adres</th>
        <th>Najemca</th>
        <th>Kwota czynszu</th>
        <th>Status płatności</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var rental in ViewBag.ActiveRentals)
    {
        <tr>
            <td>@rental.Property.Address</td>
            <td>@rental.Tenant.FullName</td>
            <td>@rental.MonthlyRent zł</td>
            <td>@(rental.EndDate.HasValue ? "Aktywny" : "Zakończony")</td>
        </tr>
    }
    </tbody>
</table>

<h2>Historia płatności</h2>
<table class="table">
    <thead>
    <tr>
        <th>Data</th>
        <th>Kwota</th>
        <th>Najemca</th>
        <th>Wynajmujący</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var payment in ViewBag.AllPayments)
    {
        <tr>
            <td>@payment.Date.ToString("yyyy-MM-dd")</td>
            <td>@payment.Amount zł</td>
            <td>@payment.User?.UserName</td>
            <td>@payment.RentalAgreement?.Property.User.UserName</td>
        </tr>
    }
    </tbody>
</table>